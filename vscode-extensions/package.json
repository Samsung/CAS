{
	"name": "cas-vscode-extensions",
	"version": "0.21.11",
	"description": "Monorepo for CAS-related VSCode tooling",
	"scripts": {
		"build": "turbo build",
		"check": "turbo check",
		"watch": "turbo run watch",
		"dev": "turbo dev --concurrency 16",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"package:extensions": "turbo package:extension && cpx -uv 'extensions/*/*.vsix' dist",
		"package:cas": "turbo package:extension --filter cas",
		"package:p4": "turbo package:extension --filter cas-p4",
		"cas:watch:esbuild": "pnpm --filter cas watch:esbuild",
		"cas:watch": "pnpm --filter cas watch",
		"@cas/webview:dev": "turbo dev --filter @cas/webview",
		"@cas/webview:watch": "turbo run watch --filter @cas/webview",
		"p4:watch:esbuild": "pnpm --filter cas watch:esbuild",
		"p4:watch:tsc": "pnpm --filter cas watch:tsc",
		"clean": "rimraf -g ./extensions/*/dist ./packages/*/dist",
		"clean:cache": "rimraf -g ./**/.turbo",
		"clean:packages": "rimraf -g ./**/node_modules",
		"clean:all": "pnpm run '/^clean($|:(?!all).+)/'",
		"postinstall": "lefthook install",
		"build:clangd": "BUILD_CLANGD=1 pnpm install --no-frozen-lockfile && mkdir -p .clangd && cmake -G Ninja -B .clangd -S node_modules/llvm-project/llvm -DLLVM_ENABLE_PROJECTS='clang;clang-tools-extra' -DCMAKE_BUILD_TYPE=MinSizeRel && cmake --build .clangd --target clangd && pnpm install --no-frozen-lockfile && ln -s $PWD/.clangd extensions/cas/.clangd"
	},
	"repository": {
		"type": "git",
		"url": "https://github.sec.samsung.net/CO7-SRPOL-Mobile-Security/cas-vscode-extension"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"cpx": "catalog:",
		"lefthook": "catalog:",
		"rimraf": "catalog:",
		"turbo": "catalog:"
	},
	"optionalDependencies": {
		"llvm-project": "catalog:"
	},
	"packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
	"pnpm": {
		"overrides": {
			"postcss": "^8.4.47",
			"svelte": "catalog:",
			"@githubocto/tailwind-vscode>tailwindcss": "^4.1.6"
		},
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@tailwindcss/oxide",
			"@vscode/vsce-sign",
			"core-js",
			"cpu-features",
			"esbuild",
			"keytar",
			"lefthook",
			"protobufjs",
			"ssh2",
			"svelte-preprocess-react"
		]
	},
	"dependencies": {
		"corepack": "catalog:"
	}
}
