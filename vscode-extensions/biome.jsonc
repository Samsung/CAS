{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"files": {
		"includes": [
			"{packages,extensions}/*/src/**/*.ts",
			"{packages,extensions}/*/src/**/*.svelte",
			"{packages,extensions}/*/src/**/*.css",
			"{packages,extensions}/*/src/**/*.css"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"correctness": {
				"noSwitchDeclarations": "warn",
				"noUndeclaredVariables": "off",
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			},
			"style": {
				"useBlockStatements": "warn",
				"useNamingConvention": {
					"level": "off",
					"options": {}
				}
			},
			"suspicious": {
				"noControlCharactersInRegex": "warn",
				"noDoubleEquals": "warn",
				"noPrototypeBuiltins": "warn"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"overrides": [
		{
			"includes": ["**/*.svelte", "**/*.svelte.ts"],
			"linter": {
				"rules": {
					"correctness": {
						// Biome can't see usage outside of <script> tags yet
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					},
					"style": {
						// same as above - this would break bind: declarations
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	]
}
