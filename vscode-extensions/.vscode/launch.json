// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extensions",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--enable-source-maps",
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/cas",
				"--enable-proposed-api=mbsec.cas",
				"--log=Samsung.cas:trace"
			],
			"debugWebviews": true,
			"sourceMaps": true,
			"autoAttachChildProcesses": true,
			"outFiles": [
				"${workspaceFolder}/extensions/*/dist/**/*.js",
			],
			"preLaunchTask": "dev",
			"trace": true,
			"rendererDebugOptions": {
				"outFiles": [
					"${workspaceFolder}/packages/*/.svelte-kit/**/*.js",
					"${workspaceFolder}/packages/*/dist/**/*.js",
					"!**/node_modules/**"
				],
				"sourceMaps": true,
				"perScriptSourcemaps": "yes",
				"trace": true,
				"webRoot": "${workspaceFolder}/packages/webview/"
			}
		},
		{
			"name": "Run Extension (cas)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--enable-source-maps",
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/cas",
				"--enable-proposed-api=mbsec.cas",
				"--log=Samsung.cas:trace",
			],
			"debugWebviews": true,
			"outFiles": [
				"${workspaceFolder}/extensions/*/dist/**/*.js",
			],
			"preLaunchTask": "dev",
			"trace": true
		},
		{
			"name": "Run Extensions (production)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--enable-source-maps",
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/cas",
				"--enable-proposed-api=mbsec.cas",
				"--log=Samsung.cas:trace",
				"-c",
                "Release"
			],
			"env": {
				"NODE_ENV": "production"
			},
			"outFiles": [
				"${workspaceFolder}/extensions/*/dist/**/*.js",
			],
			"preLaunchTask": "watch",
			"trace": true
		},
		{
			"name": "Extensions Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--enable-source-maps",
				"--extensionDevelopmentPath=${workspaceFolder}/extensions/cas",
				"--extensionTestsPath=${workspaceFolder}/extensions/cas/dist/test/suite/index",
				"--enable-proposed-api=mbsec.cas",
				"--log=Samsung.cas:trace",
				"--log=Samsung.CAS:trace"
			],
			"outFiles": [
				"${workspaceFolder}/dist/test/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		}
	]
}
